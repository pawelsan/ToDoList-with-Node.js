<%- include("header") -%>
<div class="box" id="heading">
    <h2>
        <%= listTitle %>!</h2>
</div>
<div class="box">
    <ul>
        <% for (i=0; i < items.length; i++) { %>
        <li class="item">
            <input type="checkbox">
            <p>
                <%= items[i] %>
            </p>
        </li>
        <% } %>
    </ul>

    <form class="item" action="/" method="POST">
        <input type="text" name="newTask" placeholder="Add new task" autocomplete="off">
        <button type="submit" name="button" value=<%=listTitle %>>+</button>
    </form>
</div>

<%- include("footer") -%>