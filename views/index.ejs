        <!-- <li class="item">
            <input type="checkbox">
            <p>
                <%= items[i].name %>
            </p>
        </li> -->
        <!-- <% } %> -->
    </ul>

    <form class="item" action="/" method="POST">
        <input type="text" name="newTask" placeholder="Add new task" autocomplete="off">
        <button type="submit" name="button" value=<%=listTitle %>>+</button>
    </form>
</div>

<%- include("footer") -%>