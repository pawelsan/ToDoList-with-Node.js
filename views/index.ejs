<%- include("header") -%>
<div class="box" id="heading">
    <h2>
        <%= listTitle %>!</h2>
</div>
<div class="box">
    <ul>
        <% items.forEach(item => { %>
        <li class="item">
            <form action="/delete" method="POST">
                <input type="checkbox" onchange="this.form.submit()" name="deleted" value="<%=item._id%>">
                <p>
                    <%= item.name %>
                </p>
            </form>
        </li>
        <% }) %>
